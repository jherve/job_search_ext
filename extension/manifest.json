{
  "manifest_version": 2,
  "name": "Firefox extension example",
  "description": " extension written in PureScript",
  "version": "0.1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "new_ext@mozilla.org"
    }
  },
  "browser_action": {
    "default_title": "Test"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "storage"]
}
